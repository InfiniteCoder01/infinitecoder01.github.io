<style>
	nav {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: space-between;

		box-shadow: 0 2px 8px #00000030;
		background: var(--bg1);
	}

	h2 {
		margin: 0;
	}

	a {
		display: inline;
		padding: 0.8em 0.4em;
		color: var(--fg);
		text-decoration: none;
	}
	
	.socials svg {
		fill: var(--fg);
	}

	@media (max-width: 720px) {
		.socials {
			display: none;
		}

		nav {
			justify-content: center;
		}
	}
</style>
